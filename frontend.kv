<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
        Button:
            id: start_stop
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
        Button:
            text: 'Create Sharable Link'
            on_press: root.create_link()
        Label:
            id: link_text
            text: ''
        GridLayout:
            cols: 2
            Button:
                text: 'Copy Link'
            Button:
                text: 'Open Link'


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'

